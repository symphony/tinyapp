<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="../styles/bootstrap-dark.min.css">
    <title>TinyApp</title>
  </head>
  <body>
    <%- include('partials/_header') %>
    <main style="margin: 1em;">
      <div style="top: 20px; right: 110px; position: absolute">
        <%- include('partials/_alert') %>
      </div>
      <h3>My URLs</h3>
      <table class="table">
        <thead>
          <tr>
            <th scope="col" class="col-1">Short URL</th>
            <th scope="col" class="col-2">Long URL</th>
            <th scope="col" class="col-1"></th>
            <th scope="col" class="col-3"></th>
          </tr>
        </thead>
        <tbody class="table">
          <% for (const url in urls) { %>
            <tr>
              <td><a href='urls/<%= url %>'><%= url %></a></td>
              <td><a href='<%= urls[url].longURL %>'><%= urls[url].longURL.replace(/(^\w+:|^)\/\//, '') %></a></td>
              <td><form type="button" action="urls/<%= url %>"><button class="btn btn-light">Edit</button></form></td>
              <td><form type="button" method="POST" action="urls/<%= url %>?_method=DELETE"><button class="btn btn-danger">Delete</button></form></td>
            </tr>
            <% } %>
        </tbody>
    </main>
    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  </body>
</html>